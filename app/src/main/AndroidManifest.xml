<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="store.singto.singtostore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Tools.Singto"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginRegister.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginRegister.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginRegister.PasswordResetAvtivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MeTab.UserProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MeTab.EditUserNameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MeTab.EditUserPhoneActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MeTab.EditUserAvatarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProductTab.DetailPrdActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MeTab.EditUserFreeAddressActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MeTab.FavoritePrdActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ProductTab.BuyNowActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent" />
        <activity android:name=".MeTab.OrdersActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>