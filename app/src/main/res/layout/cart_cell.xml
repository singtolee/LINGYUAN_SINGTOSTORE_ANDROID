<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/fourdp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:baselineAligned="false">
    <ImageView
        android:id="@+id/isChecked"
        android:src="@drawable/checked"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:layout_width="@dimen/zerodp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cartMainImg"
        android:layout_weight="3"
        android:src="@drawable/placeholder"
        android:layout_width="@dimen/zerodp"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="@dimen/zerodp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/cartPrdName"
            android:padding="@dimen/sixdp"
            android:text="Product Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/sixdp"
            android:id="@+id/cartPrdCS"
            android:text="Color or Size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/sixdp"
            android:id="@+id/cartPrdPrice"
            android:text="THB 999.0"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/twentyfivedp"
            android:layout_marginLeft="@dimen/tenMargin"
            android:background="@drawable/view_border"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirtyMargin">
            <TextView
                android:id="@+id/cartMinusBtn"
                android:text="-"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/thirtyMargin"
                android:layout_height="@dimen/thirtyMargin" />
            <TextView
                android:id="@+id/cartQty"
                android:text="9"
                android:textSize="22sp"
                android:background="@drawable/view_border"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/fortyMargin"
                android:layout_height="@dimen/thirtyMargin" />

            <TextView
                android:id="@+id/cartPlusBtn"
                android:text="+"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/thirtyMargin"
                android:layout_height="@dimen/thirtyMargin" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>