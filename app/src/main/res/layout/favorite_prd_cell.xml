<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ysldp">
    <ImageView
        android:src="@drawable/placeholder"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/tenMargin"
        android:layout_centerVertical="true"
        android:id="@+id/favroitePrd_img"
        android:layout_width="@dimen/yeldp"
        android:layout_height="@dimen/yeldp" />

    <TextView
        android:layout_marginTop="@dimen/twentyfivedp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/ysldp"
        android:text="@string/app_name"
        android:id="@+id/favoritePrd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/sixtydp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/ysldp"
        android:text="THB 199.0"
        android:id="@+id/favoritePrd_price"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>