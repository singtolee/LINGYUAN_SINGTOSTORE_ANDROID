<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/fourdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/mainPrdImage"
            android:src="@drawable/placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <TextView
            android:paddingTop="@dimen/sixdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirtyMargin"
            android:paddingLeft="@dimen/sixdp"
            android:paddingRight="@dimen/sixdp"
            android:textSize="@dimen/shortprdcellNameandpricetextSize"
            android:id="@+id/prdName"
            android:text="@string/app_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirtyMargin"
            android:textSize="@dimen/shortprdcellSubtextSize"
            android:paddingLeft="@dimen/sixdp"
            android:paddingRight="@dimen/sixdp"
            android:id="@+id/prdSub"
            android:text="@string/app_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirtyMargin"
            android:paddingLeft="@dimen/sixdp"
            android:paddingRight="@dimen/sixdp"
            android:textSize="@dimen/shortprdcellNameandpricetextSize"
            android:id="@+id/prdPrice"
            android:text="THB_999.0"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</android.support.v7.widget.CardView>