<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fiftydp"
    android:orientation="horizontal">

    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/userProfileItem"
        android:text="@string/app_name"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/discloseIndicator"
        android:layout_marginRight="@dimen/thirtyMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userProfileItemDetail"
        android:text="@string/app_name" />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discloseIndicator"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:tint="@color/graycolor"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/onedp"
        android:background="@color/graycolor"
        android:layout_alignParentBottom="true">
    </View>



</RelativeLayout>