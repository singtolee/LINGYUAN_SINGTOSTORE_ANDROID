<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy_now"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transblack"
    tools:context="store.singto.singtostore.ProductTab.BuyNowActivity">

    <RelativeLayout
        android:background="@color/whiteColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/threehunder"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/placeholder"
                android:layout_marginLeft="@dimen/thirtyMargin"
                android:layout_marginTop="-70dp"
                android:layout_width="140dp"
                android:layout_height="140dp" />

            <TextView
                android:textSize="22sp"
                android:padding="@dimen/twentyMargin"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:padding="@dimen/twentyMargin"
                android:layout_marginLeft="@dimen/thirtyMargin"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="@dimen/thirtyMargin"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/view_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="-"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:layout_width="@dimen/thirtyMargin"
                    android:layout_height="@dimen/thirtyMargin" />

                <TextView
                    android:text="9"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:background="@drawable/view_border"
                    android:layout_width="@dimen/fortyMargin"
                    android:layout_height="@dimen/thirtyMargin" />

                <TextView
                    android:textSize="22sp"
                    android:gravity="center"
                    android:text="+"
                    android:layout_width="@dimen/thirtyMargin"
                    android:layout_height="@dimen/thirtyMargin" />
            </LinearLayout>
            <TextView
                android:text="(3 LEFT)"
                android:layout_marginLeft="@dimen/tenMargin"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginBottom="110dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/thirtyMargin"
            android:text="TO: LI XIN BEI 0917271197"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/tenMargin"
            android:layout_marginLeft="@dimen/thirtyMargin"
            android:text="ADDRESS: VILLAGGIO 44/181"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fiftydp">
            <TextView
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="TOTOAL: THB 99.0"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="@dimen/zerodp"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="@color/whiteColor"
                android:text="CHECK OUT"
                android:layout_width="@dimen/zerodp"
                android:layout_height="match_parent" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
